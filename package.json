{
  "name": "@cookielab.io/configuration",
  "version": "0.1.0",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/cookielab/nodejs-configuration.git"
  },
  "scripts": {
    "build": "bin/build",
    "watch": "bin/watch",
    "lint": "bin/lint || true",
    "typescript": "bin/typescript || true",
    "test": "bin/jest",
    "check-all": "bin/check-all || true",
    "prepare": "bin/build"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.2",
    "dotenv-safe": "^6.0.0"
  },
  "devDependencies": {
    "@cookielab.io/eslint-config-server": "0.4.2",
    "@types/jest": "23.3.11",
    "@types/node": "10.12.18",
    "eslint": "5.11.1",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-typescript": "1.0.0-rc.1",
    "flowgen": "1.3.0",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "typescript": "3.1.6"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
